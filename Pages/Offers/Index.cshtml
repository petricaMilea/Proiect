@page
@model Proiect.Pages.Offers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Offer[0].Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offer[0].Holiday)
            </th>
            <th>
                Details
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offer[0].OfferDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offer[0].ValidDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Offer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Holiday.HolidayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Holiday.Details)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfferDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValidDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
